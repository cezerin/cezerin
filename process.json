{
	"apps": [
		{
			"name": "api",
			"script": "./src/api/server/index.js",
			"node_args": "-r esm",
			"watch": ["./config/server.js", "./src/api/server/"],
			"instances": "1",
			"exec_mode": "fork",
			"watch_options": {
				"persistent": true,
				"ignoreInitial": false
			}
		},
		{
			"name": "store",
			"script": "./dist/store/server/index.js",
			"node_args": "-r esm",
			"watch": [
				"./config/server.js",
				"./dist/store/",
				"./theme/dist/",
				"./theme/assets/index.html"
			],
			"instances": "1",
			"exec_mode": "fork",
			"watch_options": {
				"persistent": true,
				"ignoreInitial": false
			}
		}
	]
}
